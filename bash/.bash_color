


# sets the value of TERM to a terminal that supports colorization
#      not sure if this is needed with all the color config stuff I have in ~/.bashrc
export TERM=xterm-color


#############################
#### COLOR VARIABLES  #######
#############################
RESTORE='\033[0m'

RED='\033[00;31m'
GREEN='\033[00;32m'
YELLOW='\033[00;33m'
BLUE='\033[00;34m'
PURPLE='\033[00;35m'
CYAN='\033[00;36m'
LIGHTGRAY='\033[00;37m'

LRED='\033[01;31m'
LGREEN='\033[01;32m'
LYELLOW='\033[01;33m'
LBLUE='\033[01;34m'
LPURPLE='\033[01;35m'
LCYAN='\033[01;36m'
WHITE='\033[01;37m'


blue='\e[38;5;39m'
magenta='\e[38;5;176m'
magenta2='\e[38;5;206m'
magenta_bg='\e[48;5;176m'


#############################
#### PROMPT SETTINGS     ####
#############################

# sets the prompt to custom colors
# the "\e[0m" at the end is used for reset I believe.
PS1="${blue}\u@${magenta2}\h:\w\\n$ \[\e[0m\]"


#############################
#### OUTPUT COLORIZATION ####
#############################


# Black: 30
# Red: 31
# Green: 32
# Yellow: 33
# Blue: 34
# Magenta: 35
# Cyan: 36
# White: 37

# bold colors with 01 prefix
BLACK_TB="01;30"
GREEN_TB="01;32"


# di: directory
# ex: executable
# fi: regular file
# ln: symbolic link
# bd: block device driver
# sg: SGID special permission file
# su: SUID special permission file
# *.ext: file with extension .ext


LS_COLORS=$LS_COLORS"di=$GREEN_TB:"
LS_COLORS=$LS_COLORS"ex=01;31:"
LS_COLORS=$LS_COLORS"*.sh=01;31:" # CAN'T GET THIS TO WORK as ex rule overrules it
LS_COLORS=$LS_COLORS"*.txt=01;37:"


export LS_COLORS
