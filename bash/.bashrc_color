


# sets the value of TERM to a terminal that supports colorization
#      not sure if this is needed with all the color config stuff I have in ~/.bashrc
export TERM=xterm-color


#############################
#### COLOR VARIABLES  #######
#############################
RESTORE='\033[0m'

RED='\033[00;31m'
GREEN='\033[00;32m'
YELLOW='\033[00;33m'
BLUE='\033[00;34m'
PURPLE='\033[00;35m'
CYAN='\033[00;36m'
LIGHTGRAY='\033[00;37m'

LRED='\033[01;31m'
LGREEN='\033[01;32m'
LYELLOW='\033[01;33m'
LBLUE='\033[01;34m'
LPURPLE='\033[01;35m'
LCYAN='\033[01;36m'
WHITE='\033[01;37m'


blue='\e[38;5;39m'
magenta='\e[38;5;176m'
magenta2='\e[38;5;206m'
magenta_bg='\e[48;5;176m'


#############################
#### PROMPT SETTINGS     ####
#############################

# sets the prompt to custom colors
# the "\e[0m" at the end is used for reset I believe.
PS1="${blue}\u@${magenta2}\h:\w\$ \[\e[0m\]"


#############################
#### OUTPUT COLORIZATION ####
#############################

# di: directory
# ex: executable
# fi: regular file
# ln: symbolic link
# bd: block device driver
# sg: SGID special permission file
# su: SUID special permission file
# *.ext: file with extension .ext

#LS_COLORS=$LS_COLORS'di=34:ex=32:fi-1;37:*.jpg=32:*.png=32:*.zip=31:*.tar.gz=31:'
LS_COLORS=$LS_COLORS':fi=00;33:'

